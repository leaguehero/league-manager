<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if @posts.length > 0 %>
        <% @posts.each do |post| %>
          <h4><%= post.title %></h4>
          <p><%= post.body %></p>
        <% end %>
      <% end %>
      <p>
        <%= link_to "Create League Post", new_post_path %><br />
      </p>
    </div>
  </div>
</div>
