<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if @posts.length > 0 %>
        <% @posts.each do |post| %>
          <h4><%= post.title %>
            <span><%= link_to "Edit", edit_post_path(:id => post.id) %></span>
            <span><%= link_to "Delete", post_path(:id => post.id), :confirm => 'Are you sure?', :method => :delete %></span>
          </h4>
          <p><%= post.body %></p>
        <% end %>
      <% end %>
      <p>
        <%= link_to "Create League Post", new_post_path %><br />
      </p>
    </div>
  </div>
</div>
