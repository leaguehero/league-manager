<br>
<div class="container">
  <div class="row">

    <% @schedule.gamedays.each do |gd| %>
      <%= gd.date.strftime("%Y/%m/%d") %>
      <p>
        "===================="
      </p>
      <% gd.games.each do |g| %>
        <%= g.team_a.to_s + " Vs " + g.team_b.to_s + " on #{g.playing_surface} at #{g.game_time.strftime("%I:%M %p")}" %>
        <br>
      <% end %>
      <br>
    <% end %>

  </div>
</div>
