<% set_meta_tags :site => 'Generate Schedule â€¢ League Hero',
  :noindex => true
%>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= render :partial => 'layouts/toolbar' %>
      <form class="game_generator_form" action="generate" method="post">
        <fieldset class="form-group">
          <label>Court / Field Name(s)</label>
          <input class="form-control" type="text" name="field_names" placeholder="Name of courts or fields">
          <small class="text-muted">Please use a comma(,) to seperate the court / field names.</small>
        </fieldset>
        <fieldset class="form-group">
          <label>Game Times</label>
          <input class="form-control" type="text" name="game_times" placeholder="Available game times">
          <small class="text-muted">Please use a comma(,) to seperate available game times.</small>
        </fieldset>



        <strong>Start Date:</strong> <input type="date" name="start_date" placeholder="Date to Start Games"><br>
        <strong>Game Day:</strong>
        <select type="collection" name="game_days" placeholder="Days of week to allow Games">
          <% @week_days.each do |key, val| %>
            <option value=<%= val %>>
              <%= key %>
            </option>
          <% end %>
        </select><br>
        <strong>Game Cycles:</strong> <input type="text" name="cycles" placeholder="How Many Times Each Team Will Meet"><br>
        <strong>Dates to Exclude:</strong> <input type="text" name="excluded_dates" placeholder="Dates to not have games "> Add dates in YYYY/MM/DD format<br><br>
        <input type="submit" value="Generate Games">
        <notice>Don't worry, you will be able to edit the games.</notice>
      </form>
    </div>
  </div>
</div>
