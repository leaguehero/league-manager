<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= render :partial => 'layouts/toolbar' %>

      <div class="games-toolbar">
        <h3>Schedule</h3>
        <nav class="gt-months">
          <!-- create nav bar links for each month of games -->
          <% if !@game_months.blank? %>
            <% @game_months.each do |month| %>
              <a class="<% if @game_months.index(month) == 1 %>active<% end %> game_month" id="<%= month %>" href="#"><%= month %></a>
            <% end %>
          <% end %>
          
          <% if current_user %>
            <% if @games.blank? %>
              <%= link_to 'Generate Schedule', games_generator_options_path, class: "generate-schedule" %>
            <% end %>
            <%= link_to 'Add Game', new_game_path, class: "add-game" %>
          <% end %>

        </nav>
      </div>

      <% if @current_games.present? %>
        <table class="table teams_table">
          <thead>
            <tr>
              <th>Home Team</th>
              <th>Away Team</th>
              <th>Date</th>
              <th>Time</th>
              <th>Location</th>
            <% if current_user %>
              <th></th>
              <th></th>
            <% end %>
          </tr>
          </thead>
          <tbody>
            <% @current_games.each do |game|%>
              <tr>
                <td>
                  <%= Team.find(game.team_one).name  %>
                </td>
                <td>
                  <%= Team.find(game.team_two).name  %>
                </td>
                <td>
                  <%= game.date %>
                </td>
                <td>
                  <%= game.time %>
                </td>
                <td>
                  <%= game.location  %>
                </td>
              <% if current_user %>
                <td>
                  <%= link_to('Edit', edit_game_path(:id => game.id)) %>
                </td>
                <td>
                  <%= link_to "Delete", game_path(:id => game.id), :confirm => 'Are you sure?', :method => :delete %>
                </td>
              <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>

<script>
  $()
</script>
