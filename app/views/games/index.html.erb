<%= render :partial => 'home/header' %>
<div class="container-fluid">
  <div class="row">
    <div class="info_box col-md-8 col-md-push-2">
      <div class="info_box_header">
        <ul class="nav nav-tabs list-inline" id="info_box_tabs" role="tablist">
          <li class="active"><a href="/" role="tab" data-toggle="tab">LEAGUE</a></li>
          <li><a href="/games" role="tab" data-toggle="tab">SCHEDULE</a></li>
          <div class="dropdown">
            <li class="manage_tab">
              <a class="dropdown-toggle" data-target="#manage" role="tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">MANAGE</a><span class="caret"></span>
                <ul class="dropdown-menu" role="menu" aria-labelledby="drop3">
                  <li><a href="/teams">Manage Teams</a></li>
                  <li><a href="/games">Manage Games</a></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="#">Logout</a></li>
                </ul>
            </li>
        </div>
        </ul>
      </div>
        <div id="info_box_content">
          <%= link_to('Add Games Manually ', new_game_path) %>
          <br>
          <%= link_to('Generate Games', games_generator_options_path) %>
          <br>
          <h3>Schedule</h3>
          <table class="table teams_table">
            <thead>
              <tr>
                <th>Home Team</th>
                <th>Away Team</th>
                <th>Date</th>
                <th>Time</th>
                <th>Location</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
              <% @games.each do |game|%>
                <tr>
                  <td>
                    <%= Team.find(game.team_one).name  %>
                  </td>
                  <td>
                    <%= Team.find(game.team_two).name  %>
                  </td>
                  <td>
                    <%= game.date %>
                  </td>
                  <td>
                    <%= game.time %>
                  </td>
                  <td>
                    <%= game.location  %>
                  </td>
                  <td>
                    <%= link_to('Edit', edit_game_path(:id => game.id)) %>
                  </td>
                  <td>
                    <%= link_to "Delete", game_path(:id => game.id), :confirm => 'Are you sure?', :method => :delete %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
</div>
