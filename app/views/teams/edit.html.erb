<%= render :partial => 'home/header' %>
<div class="container-fluid">
  <div class="row">
    <div class="info_box col-md-8 col-md-push-2">
      <div class="info_box_header">
        <ul class="nav nav-tabs list-inline" id="info_box_tabs" role="tablist">
          <li class="active"><a href="/">LEAGUE</a></li>
          <li><a href="#schedule" role="tab" data-toggle="tab">SCHEDULE</a></li>
          <div class="dropdown">
            <li class="manage_tab">
              <a class="dropdown-toggle" data-target="#manage" role="tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">MANAGE</a><span class="caret"></span>
                <ul class="dropdown-menu" role="menu" aria-labelledby="drop3">
                  <li><a href="/teams">Manage Teams</a></li>
                  <li><a href="/games">Manage Games</a></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="#">Logout</a></li>
                </ul>
            </li>
        </div>
        </ul>
      </div>
      <div id="info_box_content">
        <div><span class="edit_page_title">EDIT TEAM DETAILS</span> (click on any input to edit)</div>
        <p class="team_name"><%= best_in_place @team, :name %></p>
        <table class="table teams_table">
          <thead>
            <tr>
              <th class="team_edit_header">Name</th>
              <th class="team_edit_header">Email</th>
              <th class="team_edit_header">Phone</th>
              <th>Captain</th>
          </tr>
          </thead>
          <tbody>
            <% @players.each do |pl|%>
              <tr>
                <td>
                  <%= best_in_place pl, :name, place_holder: "Player Name" %>
                </td>
                <td>
                  <%= best_in_place pl, :email, place_holder: "Player Email" %>
                </td>
                <td>
                  <%= best_in_place pl, :phone, place_holder: "Player Phone" %>
                </td>
                <td class="glyphicon glyphicon-star-empty">

                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%= javascript_tag do %>
$(document).ready(function() {
  /* Activating Best In Place */
  jQuery(".best_in_place").best_in_place();
});
<% end %>
