This will be the beginning of the league setup form

<%= simple_form_for @league do |f| %>
  <%= f.input :name, required: true %>
  <%= f.input :url, required: true %>
  <%= f.input :max_teams, required: true %>
  <%= f.input :max_players_per_team, required: true %>
  <%= f.input :admin, :as => :hidden, :input_html => { :value => @admin}  %>
  <%= f.button :submit %>
<% end %>
