<%= simple_form_for @league do |f| %>
  <%= f.input :name, :placeholder => "Leage Name", required: true %>
  <div>
    <span><%= f.input :subdomain, :placeholder => "Leage Name", required: true %>.leaguehero.io</span>
  </div>
  <%= f.input :max_teams, as: :integer, required: true %>
  <%= f.input :max_players_per_team, as: :integer, required: true %>
  <%= f.submit "Next" %>
<% end %>

<%= link_to('Next', new_user_registration_path) %>
