<% if request.subdomain.blank? || request.subdomain == "www" %>
<!-- marketing site -->

  <% set_meta_tags :site => 'League Hero, simple and easy league managment software.',
    :canonical => 'http://leaguehero.io',
    :author => 'League Hero',
    :copyright => '&copy; 2016 League Hero',
    :description => "-",
    :keywords => ['league'],
    :reverse => true,
    :og => {
      :title          => 'League Hero',
      :type           => 'website',
      :url            => request.original_url,
      :image          => '-',
      :description    => "-",
      :site_name      => 'Green Bay Travel Guide',
    },
    :twitter => {
      :card           => 'summary',
      :site           => '@getleaguehero',
      :title          => 'League Hero',
      :description    => "-",
      :creator        => '@getleaguehero',
      :image          => '-',
    }
  %>

  <div class="container">
    <div class="hero -home">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <h1>Manage your league online and with your mobile.</h1>
          <p>A simple and easy way to manage your leagues online.</p>
          <a class="button -green" href="/create-a-league">Create a League</a>
          [image]
          <h3>Registration. Scheduling. Communication.</h3>
        </div>
      </div>
    </div>
    <section>
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <h2>What is League Hero?</h2>
          <p>League Hero is the easiest-to-use league management website for clubs, intramural and city leagues. Online registration, simple scheduling, league website and mobile application. The best league management application at a great price!</p>
        </div>
      </div>
    </section>
    <section>
      <div class="row">
        <div class="col-md-4 col-md-offset-1">
          <h3>Sports Scheduling</h3>
          <p>Create a custom schedule tailored to your league’s needs or utilize Scheduling Hero&trade;. Scheduling Hero&trade; is the auto scheduling tool created by League Hero to generate schedules quickly for our leagues.</p>
          <a class="button" href="#">Learn More</a>
        </div>
        <div class="col-md-4 col-md-offset-2">
          [image]
        </div>
      </div>
    </section>
    <section>
      <div class="row">
        <div class="col-md-4 col-md-offset-1">
          [image]
        </div>
        <div class="col-md-4 col-md-offset-2">
          <h3>League Communication</h3>
          <p>Simple reminders, rain delays or rescheduling can all be easily communicated to teams and players across the league with League Hero’s messaging services. Send specific messages to each captain or a mass message to everyone in the league.</p>
          <a class="button" href="#">Learn More</a>
        </div>
      </div>
    </section>
    <section class="-centered">
      <div class="row">
        <div class="col-md-12">
          <h2>Create... Set... Score!</h2>
          <p>In 3 simple steps you can create your league's page.</p>
          <a class="button -green" href="/create-a-league">Create a League</a>
        </div>
      </div>
    </section>
  </div>
<% else %>
  <!-- subdomain home page -->
  <%= render :partial => 'home/index' %>
<% end %>
