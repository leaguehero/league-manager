<div class="lh-toolbar">
  <div class="lht-img"><!-- IMG --></div>
  <div class="lht-info">
    <div class="lht-team"><%= best_in_place @team, :name %></div>
    <!-- only show editing input on edit page -->
    <div class="lht-captain">Team Captain: <% if !@team.captain.nil? && current_page?(controller: 'teams', action: 'show') %><%= Player.find(@team.captain).name %><% else %><%= best_in_place @team, :captain, :as => :select, :collection => @pl_select %><% end %></div>
  </div>
  <% if current_page?(team_path) && current_user %>
    <a class="btn btn-primary-outline lht-btn" href="<%= params['id'] %>/edit">Edit</a></span>
  <% end %>
</div>
