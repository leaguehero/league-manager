<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= render :partial => 'layouts/toolbar' %>

        <table class="table teams_table">
          <thead>
            <tr>
              <th>Rank</th>
              <th>Team</th>
              <th>Win</th>
              <th>Loss</th>
              <th>Tie</th>
          </tr>
          </thead>
          <tbody>
            <% @rankings.each do |tm| %>
            <tr>
              <td>
                <%= @rankings.index(tm) + 1 %>
              </td>
              <td>
                <%= link_to tm[0], team_path(id: tm[1]["id"]) %>
              </td>
              <td>
                <%= tm[1]["wins"] %>
              </td>
              <td>
                <%= tm[1]["losses"] %>
              </td>
              <td>
                <%= tm[1]["ties"]%>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <h2>Recent News</h2>
        <% if @posts.length > 0 %>
          <% @posts.each do |post| %>
            <h4><%= post.title %></h4>
            <p><%= post.body %></p>
          <% end %>
        <% end %>
      <br>
      <h1><%= @message %></h1>
    </div>
  </div>
</div>

<script>
  $('#info_box_tabs a').click(function (e) {
    e.preventDefault()
    $(this).tab('show');
  });
  $('.dropdown-toggle').dropdown();
</script>
