<%= render :partial => 'home/header' %>
<div class="container-fluid">
  <div class="row">
    <div class="info_box col-md-8 col-md-push-2">
        <ul class="nav nav-tabs list-inline" role="tablist">
          <li class="active"><a href="#league" role="tab" data-toggle="tab">LEAGUE</a></li>
          <li><a href="#schedule" role="tab" data-toggle="tab">SCHEDULE</a></li>
          <li style="float:right;"><a href="#manage" role="tab" data-toggle="tab">MANAGE</a></li>
        </ul>
      <% if current_user.nil? %>
        <!-- if not on a subdomain -->
        <% if request.subdomain.blank? || request.subdomain == "www" %>
        <!-- we might not need these links if we are redirected to sing up wiz from marketing site -->
          <%= link_to('Get Started', new_pre_league_path) %>
          <br>
        <% else %>
          <%= link_to('Login', new_user_session_path) %>
          <br>
        <% end %>
      <% else %>
        <br>
        <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
        <br>
        <%= link_to('Manage League', edit_league_path(:id => @league.id)) %>
        <br>
        Welcome <%= current_user.email %>
        <h3><%= @league.name %></h3>
        <h3>League Manager: <%= @league.admin_name %></h3>
        <h2>Standings</h2>
        <p>
          Put league standings here
        </p>
        <h2>Recent News</h2>
        <p>
          Recent news here
        </p>

      <% end %>
      <br>
      <h1><%= @message %></h1>
    </div>
  </div>
</div>

<script>
  $('#myTabs a').click(function (e) {
    e.preventDefault()
    $(this).tab('show')
  })
</script>
