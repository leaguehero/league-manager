<% @title = @league.name + ' â€¢ League Hero' %>
<% set_meta_tags :site => @title,
  :canonical => request.original_url,
  :author => 'League Hero',
  :copyright => '&copy; 2016 League Hero',
  :description => "-",
  :keywords => ['league', 'management', 'schedule', 'teams', 'scheduling', 'recent news'],
  :reverse => true,
  :og => {
    :title          => @title,
    :type           => 'website',
    :url            => request.original_url,
    :image          => '-',
    :description    => "-",
    :site_name      => 'League Hero',
  },
  :twitter => {
    :card           => 'summary',
    :site           => '@getleaguehero',
    :title          => @title,
    :description    => "-",
    :creator        => '@getleaguehero',
    :image          => '-',
  }
%>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= render :partial => 'layouts/toolbar' %>
        <h3>Standings</h3>
        <table class="table">
          <thead>
            <tr>
              <th>Rank</th>
              <th>Team</th>
              <th>Win</th>
              <th>Loss</th>
              <th>Tie</th>
            </tr>
          </thead>
          <tbody>
            <% @rankings.each do |tm| %>
              <tr>
                <td><%= @rankings.index(tm) + 1 %></td>
                <td><%= link_to tm[0], team_path(id: tm[1]["id"]) %></td>
                <td><%= tm[1]["wins"] %></td>
                <td><%= tm[1]["losses"] %></td>
                <td><%= tm[1]["ties"]%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <% if @posts.length > 0 %>
          <h3>Recent News</h3>
          <% @posts.each do |post| %>
            <div class="lh-post">
              <h5><span><%= post.created_at.strftime("%b %e at %-I:%M%p") %></span><%= post.title %></h5>
              <p><%= post.body %></p>
            </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>

<script>
  $('#info_box_tabs a').click(function (e) {
    e.preventDefault()
    $(this).tab('show');
  });
  $('.dropdown-toggle').dropdown();
</script>
